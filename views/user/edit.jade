extends ../layout

block content
  form(method='post', action='/user/edit', enctype='application/x-www-form-urlencoded')
    if invalid
      .error Please enter a valid password, name and surname.
    ul
      li
        label(for='email') Email 
        i= user.id
      li
        label(for='pass') Password 
        input#pass(name='pass')
      li
        label(for='name') Name 
        input#name(name='name', value=user.name)
      li
        label(for='surname') Surname 
        input#surname(name='surname', value=user.surname)
      li
        label(for='address') Address 
        textarea#body(name='address')= user.address
      li
        label(for='birthDate') Birth Date 
        input#birthDate(name='birthDate', value=user.birthDate)
      li
        label(for='turkishIdentificationNumber') T.C. Kimlik # 
        input#turkishIdentificationNumber(name='turkishIdentificationNumber', value=user.turkishIdentificationNumber)
    input(type='submit', value='Update')
